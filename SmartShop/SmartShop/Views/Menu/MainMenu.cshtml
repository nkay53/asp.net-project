                <div class="row">
                    <div class="col1">
                        <div class="h_nav">
                            <h4>Hãng sản xuất</h4>
                            <ul>
                                @foreach (var item2 in item.dsLoai)
                                {
                                    <li><a href="@Url.Action("Loai", "Product", new { maloai=item2.MaLoai})">@item2.TenLoai</a></li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="col1">
                        <div class="h_nav">
                            <h4>Giá</h4>
                            <ul>
                                <li><a href="shop.html">Dưới 3 triệu</a></li>
                                <li><a href="shop.html">3 triệu - 5 triệu</a></li>
                                <li><a href="shop.html">5 triệu - 7 triệu</a></li>
                                <li><a href="shop.html">7 triệu - 10 triệu</a></li>
                                <li><a href="shop.html">10 triệu - 15 triệu</a></li>
                                <li><a href="shop.html">Trên 15 triệu</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col1">
                        <div class="h_nav">
                            <h4>Xuất xứ</h4>
                            <ul>
                                <li><a href="shop.html">Hàng chính hãng</a></li>
                                <li><a href="shop.html">Hàng xách tay</a></li>
                                <li><h4>Tình trạng</h4></li>
                                <li><a href="shop.html">Cũ</a></li>
                                <li><a href="shop.html">Mới</a></li>

                            </ul>
                        </div>
                    </div>
                    <div class="col1">
                        <div class="h_nav">
                            <h4>Hệ điều hành</h4>
                            <ul>
                                <li><a href="shop.html">Android</a></li>
                                <li><a href="shop.html">IOS</a></li>
                                <li><a href="shop.html">Windows Phone</a></li>
                                <li><a href="shop.html">BlackBerry</a></li>
                                <li><a href="shop.html">Khác</a></li>

                            </ul>
                        </div>
                    </div>
                    <div class="col1">
                        <div class="h_nav">
                            <img src="~/Image/nav_img1.jpg" alt="" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col2"></div>
                    <div class="col1"></div>
                    <div class="col1"></div>
                    <div class="col1"></div>
                    <div class="col1"></div>
                </div>
            </div>
        </li>
    }
    @if (Session["Admin"] == "Admin")
    {
        <li><a class="color7" href="~/Admin/Product">Admin</a></li>
    }
    <li>
        <a class="color8" href="~/Admin/AdminProduct">Admin</a>
    </li>
</ul>