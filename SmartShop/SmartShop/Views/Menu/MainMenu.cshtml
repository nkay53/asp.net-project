@model IEnumerable<SmartShopConnection.viewMenu>
@{
    Layout = null;
}

<ul class="megamenu skyblue">
    <li><a class="color1" href="~/">Home</a></li>
    @foreach (var item in Model)
    {
        <li class="active grid">
