@model PetaPoco.Page<SmartShopConnection.Product>
<div class="login">
    <div class="wrap">

        <div class="cont span_2_of_3">
            <div class="mens-toolbar">

                <div class="pager">

                    <ul class="dc_pagination dc_paginationA dc_paginationA06">
                        @if (Model.CurrentPage != 1)
                        {
                            <li><a href="@Url.Action("Index", "Product", new { page = Model.CurrentPage - 1})" class="previous">Lùi</a></li>
                        }
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            if (i == Model.CurrentPage)
                            {
                                <li><a style="color:red;" href="@Url.Action("Index", "Product", new { page=@i})">@i</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("Index", "Product", new { page=@i})">@i</a></li>
                            }
                        }
                        @if (Model.CurrentPage != Model.TotalPages)
                        {
                            <li><a href="@Url.Action("Index", "Product", new { page = Model.CurrentPage + 1 })" class="previous">Tới</a></li>
                        }
                    </ul>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="box1">
                <div class="clear"></div>
                @foreach (var item in Model.Items)
                {
                    <div class="col_1_of_single1 span_1_of_single1">
                        <a href="/Product/Details/@Html.DisplayFor(modelItem => item.MaSP)">
                            <div class="view1 view-fifth1">
                                <div class="top_box">
                                    <h3 class="m_1">@Html.DisplayFor(modelItem => item.TenSP)</h3>
                                    <p class="m_2">@Html.DisplayFor(modelItem => item.LoaiSP)</p>
                                    <div class="grid_img">
                                        <div class="css3"><img src="~/image/product/@item.Hinh" alt="" /></div>
                                        <div class="mask1">
                                            <div class="info">Quick View</div>
                                        </div>
                                    </div>
                                    <div class="price">@Html.DisplayFor(modelItem => item.Gia)</div>
                                </div>
                            </div>
                            <ul class="list2">
                                <li>
                                    <img src="~/image/plus.png" alt="" />
                                    <ul class="icon1 sub-icon1 profile_img">
                                        <li>
                                            <a class="active-icon c1" id="addcart" href="#" onclick="AddToCart('@Html.DisplayFor(modelItem => item.MaSP)')">Add To Bag </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            <div class="clear"></div>
                        </a>
                    </div>
                }
                <div class="clear"></div>
            </div>

        </div>
        <div class="clear"></div>
    </div>
</div>
